services:
  cerebro:
    image: cerebro:latest
    ports:
      - "8080:8080"
    environment:
      RUST_LOG: "info"
      DISCORD_TOKEN: "<my_discord_token>"
      WEBSERVER_HOST: "127.0.0.0"
      WEBSERVER_PORT: 8080
      PUBLIC_URL: "https://example.com"
    volumes:
      - ./cerebro_data:/data

    restart: unless-stopped

